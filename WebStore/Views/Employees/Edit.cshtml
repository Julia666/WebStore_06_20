@model EmployeesViewModel
@{ 
    ViewData["Title"] = $"Редактирование сотрудника id:" + Model.Id;
}

<div class="container">
    <h3>@ViewData["Title"]</h3>
    <hr/>

    <form asp-action="Edit">
        <div class="row">
            <div class="col-md-4">
                <!--элементы, куда будет выводиться доп.информация самой формы-->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- ошибка валидации, если появится-->
                <input asp-for="Id" type="hidden" /> <!--скрытый input, куда выведем id, чтобы он сохранился внутри формы и был передан обратно на сторону сервера, когда форма будет отправлена-->

                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label"></label>
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-default" /> <!-- кнопка-->
                    <a asp-action="Index" class="btn btn-info">К списку</a>
                </div>

            </div>    
        </div>
    </form>
</div>